// Joystick pins
const int xPin = A0;    // X-axis connected to analog pin A0
const int yPin = A1;    // Y-axis connected to analog pin A1
const int buttonPin = 2; // Button connected to digital pin 2

void setup() {
  Serial.begin(9600);          // Start serial communication
  pinMode(buttonPin, INPUT_PULLUP); // Joystick button usually active LOW
}

void loop() {
  int xValue = analogRead(xPin);    // Read X-axis (0–1023)
  int yValue = analogRead(yPin);    // Read Y-axis (0–1023)
  int buttonState = digitalRead(buttonPin); // Read button (LOW when pressed)

  // Print values
  Serial.print("X: ");
  Serial.print(xValue);
  Serial.print(" | Y: ");
  Serial.print(yValue);
  Serial.print(" | Button: ");
  if (buttonState == LOW) {
    Serial.println("Pressed");
  } else {
    Serial.println("Released");
  }

  delay(200); // Small delay for readability
}
