print("Starting Code Challenge")
num = int(input("Enter an integer number 20 or greater > "))

if num >= 20:
    print(f"Your number {num} is a valid Integer 20 or greater.")
    print("Thanks")
    print()
    print("Starting While Loop - Print Count Variable")
    print(f"The user input started as  {num}")

    count = 0
    value = float(num)

    while value > 1:
        value = value / 2
        count += 1
        print(f"The current value of the user input after some math is {value}")
        print(f"The while loop has looped {count} time")

    print("Ending While Loop")
    print(f"The While Loop, looped a total of {count} times")
    print("Ending Code Challenge")
